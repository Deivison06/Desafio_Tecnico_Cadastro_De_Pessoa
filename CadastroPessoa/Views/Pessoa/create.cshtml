@model CadastroPessoa.Models.Pessoa
@{
    ViewData["Title"] = "Cadastrar Pessoa";
}
<div class="card shadow mx-auto border-0" style="max-width: 600px;">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-person-plus-fill me-1"></i> Cadastro de Pessoa</h5>
    </div>
    <div class="card-body bg-light">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
                <input asp-for="DataNascimento" type="date" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RendaMensal" class="form-label">Renda Mensal</label>
                <input asp-for="RendaMensal" class="form-control" placeholder="Ex: 2500.00" />
                <span asp-validation-for="RendaMensal" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Cadastrar
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
