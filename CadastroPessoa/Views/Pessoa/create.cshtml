@model CadastroPessoa.Models.Pessoa
@{
    ViewData["Title"] = "Cadastrar Pessoa";
}
<div class="card shadow-lg border-0 rounded-4 mx-auto mt-5" style="max-width: 600px;">
    <div class="card-header bg-primary text-white rounded-top-4">
        <h5 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Cadastro de Pessoa</h5>
    </div>
    <div class="card-body bg-light rounded-bottom-4 px-4 py-4">
        <form asp-action="Create" method="post" novalidate>
            <div class="form-floating mb-4">
                <input asp-for="Nome" class="form-control" placeholder="Nome completo" />
                <label asp-for="Nome">Nome completo</label>
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="DataNascimento" type="date" class="form-control" />
                <label asp-for="DataNascimento">Data de Nascimento</label>
                <span asp-validation-for="DataNascimento" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="RendaMensal" class="form-control" placeholder="Ex: 2500.00" />
                <label asp-for="RendaMensal">Renda Mensal</label>
                <span asp-validation-for="RendaMensal" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle-fill"></i> Cadastrar
                </button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
